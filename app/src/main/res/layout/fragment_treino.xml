<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/treino_bg1"
    tools:context=".TreinoFragment">

    <Button
        android:id="@+id/exerciseLibrary"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="exerciseLibraryBtn"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#9A000000"
        android:text="Biblioteca de VÃ­deos"
        android:textSize="20dp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/DesafioTreino"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="desafioTreino"
        android:layout_below="@+id/exerciseLibrary"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#9A000000"
        android:text="Desafios de Treino"
        android:textSize="20dp"
        android:textColor="@android:color/white" />
    <Button
        android:id="@+id/TreinoPersonalizado"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="desafioTreino"
        android:layout_below="@+id/DesafioTreino"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#9A000000"
        android:text="Monte seu Treino"
        android:textSize="20dp"
        android:textColor="@android:color/white" />

</RelativeLayout>