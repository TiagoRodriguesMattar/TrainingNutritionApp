<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/nutri"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".NutritionActivity">

    <ImageView
        android:id="@+id/video_back_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/titulo_nutri"
        android:layout_toRightOf="@id/video_back_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/saude"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_marginBottom="40dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/editText"
        android:layout_below="@+id/titulo_nutri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textColorHint="@color/white"
        android:hint="Digite seu nome"
        android:inputType="text" />

    <Button
        android:layout_below="@+id/editText"
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#51000000"
        android:text="Enviar" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/RVnutri"
        android:layout_marginTop="45dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


</RelativeLayout>


